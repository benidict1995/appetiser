<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:background="#FFFFFF"
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_art_work"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        tools:src="@drawable/ic_baseline_arrow_back_ios_24"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textColor="#8a8a8a"
        android:textStyle="bold"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_art_work"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/abc_vector_test"
        tools:text="Tower Session" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/iv_art_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_track_name"
        tools:text="Rock"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:textColor="#8a8a8a"
        app:layout_constraintStart_toEndOf="@+id/iv_art_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_genre"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="PHP 200.00"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
